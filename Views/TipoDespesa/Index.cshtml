@model IEnumerable<ProjetoDespesas.Models.TipoDespesa>

@{
    ViewData["Title"] = "Index";
}

<div class="tabela">
    <div class="container">
        <p class="btnNovo">
            <a asp-action="Create" class="btn btn-primary btn-sm">Novo Tipo de Despesa</a>
        </p>

        @if (TempData["Confirmacao"] != null)
        {
            <h6 class="alert alert-success"> @TempData["Confirmacao"] </h6>    
        }

        <table class="table table-hover">
            <thead>
                <tr>
                    <th>
                        @Html.DisplayNameFor(model => model.Nome)
                    </th>
                    <th>
                        Opções
                    </th>
                </tr>
            </thead>
            <tbody>
        @foreach (var item in Model) {
                <tr>
                    <td>
                        @Html.DisplayFor(modelItem => item.Nome)
                    </td>
                    <td>
                        <a asp-action="Edit" asp-route-id="@item.TipoDespesaId" class="btn btn-info btn-sm"> Atualizar </a> |
                        <a onclick="ExibirModal(@item.TipoDespesaId, '@item.Nome')" class="btn btn-sm btn-danger"> Excluir </a>
                    </td>
                </tr>
        }
            </tbody>
        </table>
    </div>
</div>

<div class="modal" tabindex="-1" role="dialog">
  <div class="modal-dialog" role="document">
    <div class="modal-content">
      <div class="modal-header">
        <h5 class="modal-title"> Excluir </h5>
        <button type="button" class="close" data-dismiss="modal" aria-label="Fechar">
          <span aria-hidden="true">&times;</span>
        </button>
      </div>
      <div class="modal-body">
        <p>Texto do corpo do modal, é aqui.</p>
      </div>
      <div class="modal-footer">
        <button type="button" class="btn btn-secondary" data-dismiss="modal">Fechar</button>
        <button type="button" class="btn btn-primary">Salvar mudanças</button>
      </div>
    </div>
  </div>
</div>